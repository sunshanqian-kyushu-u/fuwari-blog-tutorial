---
import { Icon } from "astro-icon/components";
import { siteConfig } from "../config/site.config"
---

<a href={ siteConfig.bannerlink } target="_blank" class="relative flex items-center h-9 px-3 
w-[200px] hover:w-[217px] max-md:h-[30px] max-md:px-2.5 max-md:w-[180px] max-md:hover:w-[197px]
bg-black/60 rounded-full hover:bg-black/70 active:bg-black/80 group transition-all">
    <Icon name="material-symbols:copyright-outline-rounded" class={`text-[1.25rem] max-md:text-[1rem]
    text-white/75 transition-all`}></Icon>
    <p class="text-xs max-md:text-[11px] text-white/75 ml-1 transition-all">
        { siteConfig.bannercredit }
    </p>
    <Icon id="banner-icon" name="fa6-solid:arrow-up-right-from-square" class={`absolute right-3
    text-[0.75rem] max-md:text-[11px] text-[oklch(0.75_0.14_var(--hue))] 
    opacity-0 group-hover:opacity-100 transition-all`}></Icon>
</a>
