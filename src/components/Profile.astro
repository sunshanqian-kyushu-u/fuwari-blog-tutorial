---
import { Icon } from "astro-icon/components";
import { Image } from 'astro:assets';
import ProfileImage from "../assets/avatar.png";
import { siteConfig, ProfileLinks } from "../config/site.config";
---

<div class="relative bg-[var(--card-bg)] rounded-2xl p-3 flex flex-col items-center">
    <a href="/about/" class="grid grid-cols-1 grid-rows-1 place-items-center 
    group active:scale-95 rounded-2xl overflow-hidden transition-all">
        <Image src={ ProfileImage } alt="" class={`col-start-1 col-span-1 row-start-1 row-span-1
        group-hover:brightness-75 group-active:brightness-50 transition-all`}/>
        <Icon name="fa6-regular:address-card" class={`col-start-1 col-span-1 row-start-1 row-span-1
        text-white text-5xl scale-90 group-hover:scale-100 opacity-0 group-hover:opacity-100
        transition-all`}></Icon>
    </a>
    <p class="font-bold text-lg text-[var(--btn-text)] mt-2.5">
        { siteConfig.name }
    </p>
    <div class="h-1 w-5 bg-[var(--btn-text-hover)] rounded-full mt-1.5"></div>
    <p class="mt-1.5 px-2 text-center text-neutral-400">
        { siteConfig.intro }
    </p>
    <div class="grid grid-cols-5 w-full px-2.5 mt-1.5">
        {ProfileLinks.map(link => (
            <div class="aspect-square flex items-center justify-center">
                <a href={ link.url } target="_blank" 
                class={`w-10 h-10 rounded-lg flex items-center justify-center
                bg-[var(--btn-regular-bg)] group hover:bg-[var(--btn-regular-bg-hover)]
                active:bg-[var(--btn-regular-bg-active)] active:scale-95 transition-all
                ${!link.enabled ? "pointer-events-none opacity-50" : ""}`}>
                    <Icon name={ link.icon } class={`text-[1.5rem] text-[var(--btn-content)]`}></Icon>
                </a>
            </div>
        ))}
    </div>
</div>